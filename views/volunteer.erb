
<div class="col-md-12">
  <div class="col-md-6">
    <form action="/projects" method="post">
    <button class="btn btn-primary MEGA" type="submit" name="button">Projects</button>
    </form>
  </div>
  <div class="col-md-6">
    <form action="/volunteers" method="post">
    <button class="btn btn-success MEGA" type="submit" name="button">Volunteers</button>
    </form>
  </div>
  <br>
  <hr>
  <br>
  <h1><%= @volunteer[0]['name'] %></h1>
  <br>

  <h5><%= @project[0]['name'] unless @project.nil? %></h5>

  <br>
  <!-- assign volunteer -->
  <label for="volunteer_assign">Assign to Project</label>
  <form action="/volunteer/assign" class="form-group" method="post">
    <input type="hidden" name="volunteer_id" value="<%= @volunteer[0]['id'] %>">
    <select class="form-control" name="volunteer[project_id]">
    <% Project.all.each do |project| %>
      <option value="<%= project['id'] %>"><%= project['name']%></option>
    <% end %>
    </select>
    <br>
    <button type="submit" class="btn btn-success">Assign</button>
  </form>
  <br>

  <!-- update volunteer -->
  <form action="/volunteer/<%= @volunteer[0]['id'] %>/update" method="post">
    <input type="hidden" name="_method" value="patch">
    <label for="update-volunteer">Update Volunteer Name</label>
    <br>
    <input type="text" name="update-volunteer">
    <br>
    <br>
    <button class="btn btn-success" type="submit" name="update-button">Update Volunteer</button>
  </form>
  <br>
  <br>
  <!-- delete volunteer -->
  <form action="/volunteer/delete/<%= @volunteer[0]['id']%>" method="post">
    <input type="hidden" name="_method" value="delete">
    <button class="btn btn-danger" type="submit">Delete Volunteer</button>
  </form>

  <br>
  <a href="/" class="btn btn-info">Home</a>
</div>
