<div class="col-md-12">
  <div class="col-md-6">
    <form action="/projects" method="post">
    <button class="btn btn-primary MEGA" type="submit" name="button">Projects</button>
    </form>
  </div>
  <div class="col-md-6">
    <form action="/volunteers" method="post">
    <button class="btn btn-success MEGA" type="submit" name="button">Volunteers</button>
    </form>
  </div>
  <br>
  <hr>
  <br>
  <form action="/add-project" method="post">
    <h2>Create a New Project</h2>
    <div class="col-md-6">
      <div class="form-group">
        <label for="project-name">Enter Project Name:</label>
        <input name="project-name" class="form-control" type="text" required>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="project-description">Enter Project Description:</label>
        <input name="project-description" class="form-control" type="text" required>
      </div>
    </div>
    <br>
    <button action="/" class="btn btn-info">Create Project</button>
  </form>
  <br>
  <hr>
  <br>
  <h2>Create a new Volunteer</h2>
  <form action="/add-volunteer" method="post">
      <div class="col-md-6">
        <div class="form-group">
          <label for="first-name">Enter First Name:</label>
          <input name="first-name" class="form-control" type="text" required>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="last-name">Enter Last Name:</label>
          <input name="last-name" class="form-control" type="text">
        </div>
      </div>
      <hr>
      <button action="/" class="btn btn-info">Add Volunteer</button>
    </form>
</div>
